@page "/ejercicio4"
@rendermode InteractiveServer

<div class="content animation_content">
    <div class="table">

        <div class="cell">
            <h3>Ejercicio 4</h3>
        </div>
        <div class="rowx">
            <div class="cell">
                <input type="number" placeholder="ingrese el numero" @bind="numero" />
            </div>
            <div class="cell cellx">
                <button @onclick=operate>Calcular</button>
            </div>

        </div>
        <div class="row">
            <p>@resultado</p>
        </div>
    </div>
</div>

@code {
    private int numero;
    private string resultado = "";

    private void operate()
    {

        try
        {
            string numStr = numero.ToString();
            if (numStr.Length > 0)
            {

                resultado = $"La cantidad d digitos de {numStr} son {numStr.Length}";
            }
            else
            {

                resultado = "Debo Ingresar un numero";
            }

        }
        catch
        {
            resultado = "Ha ocurrido un error inesperado";
        }

    }
}
